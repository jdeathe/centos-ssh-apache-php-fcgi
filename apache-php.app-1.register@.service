[Unit]
Description=centos-apache-php-fcgi etcd registration // %p@%i
After=etcd.service
After=etcd2.service
After=apache-php.app-1@%i.service
BindsTo=apache-php.app-1@%i.service
RefuseManualStart=true
RefuseManualStop=true

[Service]
Environment="REGISTER_ETCD_PARAMETERS="
Environment="REGISTER_KEY_ROOT=/services/apache-php.app-1.%i"
Environment="REGISTER_TTL=120"
Environment="REGISTER_UPDATE_INTERVAL=95"

# Unregister service
ExecStartPre=/bin/bash -c \
  "if /usr/bin/etcdctl ${REGISTER_ETCD_PARAMETERS} ls ${REGISTER_KEY_ROOT} &> /dev/null; then \
    /usr/bin/etcdctl \
      ${REGISTER_ETCD_PARAMETERS} \
      rm \
      ${REGISTER_KEY_ROOT} \
      --recursive; \
  fi"

# Register service
ExecStart=/bin/bash -c \
  "until /usr/bin/etcdctl ${REGISTER_ETCD_PARAMETERS} get ${REGISTER_KEY_ROOT}/ports/tcp/80 &> /dev/null \
    || /usr/bin/etcdctl ${REGISTER_ETCD_PARAMETERS} get ${REGISTER_KEY_ROOT}/ports/tcp/443 &> /dev/null \
    || /usr/bin/etcdctl ${REGISTER_ETCD_PARAMETERS} get ${REGISTER_KEY_ROOT}/ports/tcp/8443 &> /dev/null; do \
    if /usr/bin/docker port apache-php.app-1.%i 80 &> /dev/null; then \
      /usr/bin/etcdctl \
        ${REGISTER_ETCD_PARAMETERS} \
        mk \
        ${REGISTER_KEY_ROOT}/ports/tcp/80 \
        \"$(/usr/bin/docker port apache-php.app-1.%i 80 | /usr/bin/sed 's~^[0-9.]*:~~')\" \
        --ttl ${REGISTER_TTL} 2> /dev/null; \
    fi; \
    if /usr/bin/docker port apache-php.app-1.%i 443 &> /dev/null; then \
      /usr/bin/etcdctl \
        ${REGISTER_ETCD_PARAMETERS} \
        mk \
        ${REGISTER_KEY_ROOT}/ports/tcp/443 \
        \"$(/usr/bin/docker port apache-php.app-1.%i 443 | /usr/bin/sed 's~^[0-9.]*:~~')\" \
        --ttl ${REGISTER_TTL} 2> /dev/null; \
    fi; \
    if /usr/bin/docker port apache-php.app-1.%i 8443 &> /dev/null; then \
      /usr/bin/etcdctl \
        ${REGISTER_ETCD_PARAMETERS} \
        mk \
        ${REGISTER_KEY_ROOT}/ports/tcp/8443 \
        \"$(/usr/bin/docker port apache-php.app-1.%i 8443 | /usr/bin/sed 's~^[0-9.]*:~~')\" \
        --ttl ${REGISTER_TTL} 2> /dev/null; \
    fi; \
    sleep 0.5; \
  done; \
  /usr/bin/etcdctl \
    ${REGISTER_ETCD_PARAMETERS} \
    mk \
    ${REGISTER_KEY_ROOT}/hostname \
    %H \
    --ttl ${REGISTER_TTL}; \
  while true; do \
    sleep ${REGISTER_UPDATE_INTERVAL}; \
    if /usr/bin/docker port apache-php.app-1.%i 80 &> /dev/null; then \
      /usr/bin/etcdctl \
        ${REGISTER_ETCD_PARAMETERS} \
        $(if ! /usr/bin/etcdctl ${REGISTER_ETCD_PARAMETERS} get ${REGISTER_KEY_ROOT}/ports/tcp/80 &> /dev/null; then echo set; else echo update; fi) \
        ${REGISTER_KEY_ROOT}/ports/tcp/80 \
        \"$(/usr/bin/docker port apache-php.app-1.%i 80 | /usr/bin/sed 's~^[0-9.]*:~~')\" \
        --ttl ${REGISTER_TTL}; \
    fi; \
    if /usr/bin/docker port apache-php.app-1.%i 443 &> /dev/null; then \
      /usr/bin/etcdctl \
        ${REGISTER_ETCD_PARAMETERS} \
        $(if ! /usr/bin/etcdctl ${REGISTER_ETCD_PARAMETERS} get ${REGISTER_KEY_ROOT}/ports/tcp/443 &> /dev/null; then echo set; else echo update; fi) \
        ${REGISTER_KEY_ROOT}/ports/tcp/443 \
        $(/usr/bin/docker port apache-php.app-1.%i 443 | /usr/bin/sed 's/^[0-9.]*://') \
        --ttl ${REGISTER_TTL}; \
    fi; \
    if /usr/bin/docker port apache-php.app-1.%i 8443 &> /dev/null; then \
      /usr/bin/etcdctl \
        ${REGISTER_ETCD_PARAMETERS} \
        $(if ! /usr/bin/etcdctl ${REGISTER_ETCD_PARAMETERS} get ${REGISTER_KEY_ROOT}/ports/tcp/8443 &> /dev/null; then echo set; else echo update; fi) \
        ${REGISTER_KEY_ROOT}/ports/tcp/8443 \
        $(/usr/bin/docker port apache-php.app-1.%i 8443 | /usr/bin/sed 's/^[0-9.]*://') \
        --ttl ${REGISTER_TTL}; \
    fi; \
    /usr/bin/etcdctl \
      ${REGISTER_ETCD_PARAMETERS} \
      $(if ! /usr/bin/etcdctl ${REGISTER_ETCD_PARAMETERS} get ${REGISTER_KEY_ROOT}/hostname &> /dev/null; then echo set; else echo update; fi) \
      ${REGISTER_KEY_ROOT}/hostname \
      %H \
      --ttl ${REGISTER_TTL}; \
  done"

# Unregister service
ExecStop=/bin/bash -c \
  "if /usr/bin/etcdctl ${REGISTER_ETCD_PARAMETERS} ls ${REGISTER_KEY_ROOT} &> /dev/null; then \
    /usr/bin/etcdctl \
      ${REGISTER_ETCD_PARAMETERS} \
      rm \
      ${REGISTER_KEY_ROOT} \
      --recursive; \
  fi"

[Install]
DefaultInstance=1.1
RequiredBy=apache-php.app-1@%i.service

[X-Fleet]
MachineOf=apache-php.app-1@%i.service
